---
interface Project {
  title: string;
  icon: string;
  description: string;
  href: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<div class="carousel-container" id="carousel-container">
  <div class="carousel-wrapper">
    <div class="carousel" id="carousel">
      {projects.map((project) => (
        <a href={project.href} class="carousel-slide">
          <div class="slide-content">
            <div class="slide-icon">{project.icon}</div>
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            <span class="slide-cta">Explore →</span>
          </div>
        </a>
      ))}
    </div>
  </div>
  <div class="carousel-controls">
    <button class="carousel-btn prev" id="carousel-prev" aria-label="Previous slide">‹</button>
    <button class="carousel-btn next" id="carousel-next" aria-label="Next slide">›</button>
  </div>
</div>

<style>
  .carousel-container {
    position: relative;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
  }

  .carousel-wrapper {
    overflow: hidden;
    border-radius: 12px;
    background: #fafafa;
    border: 1px solid #e0e0e0;
  }

  .carousel {
    display: flex;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    width: 100%;
  }

  .carousel-slide {
    flex: 0 0 100%;
    padding: 3rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: inherit;
    text-decoration: none;
    min-height: 400px;
  }

  .slide-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .slide-icon {
    font-size: 4rem;
    margin-bottom: 0.5rem;
  }

  .carousel-slide h3 {
    font-size: 2rem;
    color: #1a1a1a;
    margin: 0.5rem 0;
  }

  .carousel-slide p {
    color: #4b5563;
    font-size: 1.1rem;
    margin: 0;
    line-height: 1.6;
    max-width: 500px;
  }

  .slide-cta {
    color: #6366f1;
    font-weight: 600;
    font-size: 1.05rem;
    margin-top: 1rem;
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .carousel-slide:hover .slide-cta {
    transform: translateX(4px);
  }

  .carousel-controls {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .carousel-btn {
    width: 48px;
    height: 48px;
    border: 2px solid #e0e0e0;
    background: #ffffff;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #1a1a1a;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-btn:hover {
    border-color: #6366f1;
    color: #6366f1;
    background: #f5f7ff;
  }

  @media (max-width: 768px) {
    .carousel-slide {
      padding: 2rem 1rem;
      min-height: 350px;
    }

    .slide-icon {
      font-size: 3rem;
    }

    .carousel-slide h3 {
      font-size: 1.5rem;
    }

    .carousel-slide p {
      font-size: 1rem;
    }

    .carousel-controls {
      gap: 0.75rem;
    }

    .carousel-btn {
      width: 40px;
      height: 40px;
      font-size: 1.2rem;
    }
  }
</style>

<script define:vars={{ slideCount: projects.length }}>
  const carousel = document.getElementById('carousel');
  const prevBtn = document.getElementById('carousel-prev');
  const nextBtn = document.getElementById('carousel-next');
  
  let currentIndex = 0;
  let autoplayInterval;
  
  function updateCarousel() {
    if (carousel) {
      carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
    }
  }
  
  function nextSlide() {
    currentIndex = (currentIndex + 1) % slideCount;
    updateCarousel();
    resetAutoplay();
  }
  
  function prevSlide() {
    currentIndex = (currentIndex - 1 + slideCount) % slideCount;
    updateCarousel();
    resetAutoplay();
  }
  
  function resetAutoplay() {
    clearInterval(autoplayInterval);
    autoplayInterval = setInterval(nextSlide, 6000);
  }
  
  if (nextBtn) nextBtn.addEventListener('click', nextSlide);
  if (prevBtn) prevBtn.addEventListener('click', prevSlide);
  
  // Start autoplay
  autoplayInterval = setInterval(nextSlide, 6000);
</script>