---
import Layout from '../layouts/Layout.astro';
import Carousel from '../components/Carousel.astro';

const projects = [
  {
    title: 'BrewMuse',
    icon: '‚òï',
    description: 'Your AI barista companion. Expert guidance for perfect espresso, pour-overs, and specialty coffee techniques.',
    href: '/brewmuse'
  },
  {
    title: 'CoffeePal',
    icon: 'üåç',
    description: 'Discover exceptional coffee and local roasters. Find your next favorite blend in your area.',
    href: '/coffeepal'
  }
];
---

<Layout title="SeamusRW's Tech Playground">
	<section class="hero">
		<div class="hero-content">
			<h1>Welcome to My Tech Playground</h1>
			<p class="tagline">Exploring AI, tech, and everything in between</p>
		</div>
	</section>

	<section class="featured">
		<div class="container">
			<h2>Featured AI Agents</h2>
			<p class="section-description">Discover my latest AI-powered projects</p>
			<Carousel projects={projects} />
		</div>
	</section>

	<section class="about">
		<div class="container">
			<h2>About This Space</h2>
			<p>
				This is my playground for exploring and building with modern AI technology. Here you'll find innovative projects
				that combine cutting-edge AI with thoughtful design to solve real problems. Each project represents an experiment
				in bringing AI capabilities closer to practical, everyday use.
			</p>
			<div class="cta-group">
				<a href="/projects" class="btn btn-primary">View All Projects</a>
				<a href="/brewmuse" class="btn btn-secondary">Try BrewMuse</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero {
		padding: 5rem 2rem;
		text-align: center;
		background: linear-gradient(135deg, #f5f7ff 0%, #ffffff 100%);
		border-bottom: 1px solid #e0e0e0;
	}

	.hero-content {
		max-width: 700px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 3.5rem;
		margin-bottom: 0.75rem;
		background: linear-gradient(135deg, #6366f1, #4f46e5);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.tagline {
		font-size: 1.3rem;
		color: #4b5563;
		margin: 0;
		font-weight: 500;
	}

	.featured {
		padding: 4rem 2rem;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.featured h2 {
		text-align: center;
		margin-bottom: 0.5rem;
	}

	.section-description {
		text-align: center;
		color: #4b5563;
		font-size: 1.1rem;
		margin-bottom: 3rem;
		font-weight: 500;
	}

	.about {
		padding: 4rem 2rem;
		background: #fafafa;
		border-top: 1px solid #e0e0e0;
	}

	.about h2 {
		text-align: center;
		margin-bottom: 2rem;
	}

	.about p {
		max-width: 700px;
		margin: 0 auto 2rem;
		font-size: 1.1rem;
		color: #4b5563;
		line-height: 1.8;
		text-align: center;
	}

	.cta-group {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		padding: 0.75rem 2rem;
		border-radius: 8px;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.3s ease;
		border: 2px solid transparent;
		display: inline-block;
		text-decoration: none;
		cursor: pointer;
	}

	.btn-primary {
		background: #6366f1;
		color: white;
		box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
	}

	.btn-primary:hover {
		background: #4f46e5;
		transform: translateY(-2px);
		box-shadow: 0 6px 16px rgba(99, 102, 241, 0.35);
	}

	.btn-secondary {
		background: white;
		color: #6366f1;
		border-color: #6366f1;
	}

	.btn-secondary:hover {
		background: #f5f7ff;
		border-color: #4f46e5;
		color: #4f46e5;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 3rem 1rem;
		}

		.hero h1 {
			font-size: 2.2rem;
		}

		.tagline {
			font-size: 1.1rem;
		}

		.featured,
		.about {
			padding: 2rem 1rem;
		}
	}
</style>
